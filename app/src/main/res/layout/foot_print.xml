<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="70dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/footprint_time"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="2018/04/10 16:30"
        android:textSize="7dp"
        android:gravity="center"
        android:textColor="#404B69"
        android:lines="1" />
    <ImageView
        android:id="@+id/footprint_time_line"
        android:layout_width="match_parent"
        android:src="@mipmap/time_line"
        android:scaleType="fitXY"
        android:layout_height="12dp" />
    <ImageView
        android:id="@+id/footprint_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:src="@mipmap/trip_default"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/footprint_content"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:text="宽窄巷子"
        android:textSize="9dp"
        android:textStyle="bold"
        android:textColor="#404B69"
        android:gravity="center"
        android:lines="1"/>
</LinearLayout>
